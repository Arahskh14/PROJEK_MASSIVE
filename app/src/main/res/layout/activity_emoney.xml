<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout1"
    tools:context=".pembayaran.eMoney">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="279dp"
        android:layout_marginTop="-15dp"
        android:src="@drawable/background"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconwall"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="164dp"
        android:src="@drawable/stiker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Metode Pembayaran"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/transferBank"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="376dp"
        android:backgroundTint="@color/biruM"
        android:text="Transfer Bank"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/dompetDigital"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/biruM"
        android:text="Dompet Digital"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/transferBank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_width="39dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/bank"
        app:layout_constraintEnd_toEndOf="@+id/dompetDigital"
        app:layout_constraintTop_toTopOf="@+id/dompetDigital" />

    <ImageView
        android:id="@+id/walletImage"
        android:layout_width="39dp"
        android:layout_height="31dp"
        android:src="@drawable/wallet"
        app:layout_constraintBottom_toBottomOf="@+id/transferBank"
        app:layout_constraintEnd_toEndOf="@+id/transferBank"
        app:layout_constraintTop_toTopOf="@+id/transferBank" />

</androidx.constraintlayout.widget.ConstraintLayout>
